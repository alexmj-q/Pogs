<script>
    // Add some interactive elements
    document.querySelectorAll('.stat-card').forEach(card => {
        card.addEventListener('click', function() {
            this.style.animation = 'pulse 0.5s ease-in-out';
            setTimeout(() => {
                this.style.animation = '';
            }, 500);
        });
    });

    // Random quote generator
    const randomQuotes = [
        "I'm not bad, my team is just holding me back!",
        "That mechanic is overtuned, no one can avoid it!",
        "I would have top DPS if I wasn't healing so much!",
        "The tank pulled too early, that's not my fault!",
        "My internet is lagging, that's why I died!"
    ];

    function addRandomQuote() {
        if (Math.random() < 0.3) { // 30% chance
            const quote = randomQuotes[Math.floor(Math.random() * randomQuotes.length)];
            console.log(`üåä Shaman says: "${quote}"`);
        }
    }

    // Add random quotes to console occasionally
    setInterval(addRandomQuote, 5000);

    // Easter egg - konami code
    let konamiCode = [];
    const konami = [38, 38, 40, 40, 37, 39, 37, 39, 66, 65];
    
    document.addEventListener('keydown', function(e) {
        konamiCode.push(e.keyCode);
        if (konamiCode.length > 10) konamiCode.shift();
        
        if (konamiCode.join(',') === konami.join(',')) {
            alert('üåä Secret Shaman Code Activated! üåä\n\n"Actually, I might have been wrong about that last wipe..."');
            konamiCode = [];
        }
    });
</script>
